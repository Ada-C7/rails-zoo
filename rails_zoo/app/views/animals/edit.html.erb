<h1>Edit Animal Information</h1>

<%= form_for @animal, method: :patch do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :species %>
  <%= f.text_field :species %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.submit %>
<% end %>

<%= link_to "Cancel", animal_path(@animal.id) %>
