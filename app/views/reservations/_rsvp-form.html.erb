<%=form_for @reservation, method: form_method do | f | %>

<%= f.label :first_guest_first_name, class: 'hidden' %>
<%= f.text_field :first_guest_first_name, placeholder: 'first name' %>

<%= f.label :first_guest_last_name, class: 'hidden'  %>
<%= f.text_field :first_guest_last_name, placeholder: 'last name' %>

<%= f.label :second_guest_first_name, class: 'hidden'  %>
<%= f.text_field :second_guest_first_name, placeholder: 'first name' %>

<%= f.label :second_guest_last_name, class: 'hidden'  %>
<%= f.text_field :second_guest_last_name, placeholder: 'last name' %>

<%= f.label :email, class: 'hidden'  %>
<%= f.text_field :email, placeholder: 'email' %>

<%= f.label :phone, class: 'hidden'  %>
<%= f.text_field :phone, placeholder: 'phone' %>

<%= f.label :message, class: 'hidden'  %>
<%= f.text_area :message, placeholder: 'message to the bride and groom' %>

<%= f.label :diet, class: 'hidden'  %>
<%= f.text_area :diet, placeholder: 'dietary concerns' %>

<%= f.label :status, class: 'hidden'  %>
<%= f.text_area :status %>

<%= f.submit submit_text %>

<% end %>
