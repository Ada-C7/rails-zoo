<%=form_for @reservation, method: form_method do | f | %>

<%= f.label :first_guest_first_name %>
<%= f.text_field :first_guest_first_name %>

<%= f.label :first_guest_last_name %>
<%= f.text_field :first_guest_last_name %>

<%= f.label :second_guest_first_name %>
<%= f.text_field :second_guest_first_name %>

<%= f.label :second_guest_last_name %>
<%= f.text_field :second_guest_last_name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :phone %>
<%= f.text_field :phone %>

<%= f.label :message %>
<%= f.text_area :message %>

<%= f.label :diet %>
<%= f.text_area :diet %>

<%= f.label :status %>
<%= f.text_area :status %>

<%= f.submit submit_text %>

<% end %>
