<!DOCTYPE html>
<html>
  <head>
    <title>RailsZoo</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h3>Animals at the zoo</h3>
      <nav>
        <ul>
          <li><%= link_to 'all', animals_path %></li>
          <li><%= link_to 'new', new_animal_path %></li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
