<% @animals_selected = true %>

<main>
  <h2>Animals</h2>
  <ul id="animal-list">
    <% @animals.each do |animal| %>
      <li>
        <%= link_to animal.name + " the " + animal.species, animal_path(animal.id) %>
        <%=
          link_to "[delete]", delete_animal_path(animal.id),
          data: { confirm: "Are you sure you want to delete this animal?" },
          method: :delete,
          class: "delete"
         %>
      </li>
    <% end %>
  </ul>

  <p>
    <%= link_to "Add Animal", new_animal_path, class: "btn" %>
  </p>
</main>
