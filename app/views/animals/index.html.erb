<h1> Welcome to Rails Zoo </h1>

<%= button_to 'Add new animal', new_animal_path, method: :get, id: "add_button"%>
<ul>
  <%@animals.each do |animal| %>
  <div id = "all_animals">
    <p>Name: <%=animal[:name]%></p>
    <p>Species: <%=animal[:species]%></p>
    <p>Age: <%=animal[:age]%></p>
    <p id = "view_info_link"><%= link_to "View full info", animal_path(animal.id) %> </p>
    <%= button_to 'Delete', animal_path(animal), method: :delete, data: {confirm: 'Are you sure?' }, id: "delete_button"%>
  </div>
  <% end %>
</ul>
