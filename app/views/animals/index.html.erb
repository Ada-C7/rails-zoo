<%= render partial: "sidebar", locals: {zone: @zone} %>

<section class="content all-zoo-animals">
  <% @animals.each do |animal| %>

    <ul class="index-animal">
      <li class="animal-image-thumbnail">
        <a href="<%= animal_path(animal.id) %>"/>

          <img src="<%= animal.image %>"/>
        </a>
      </li>
      <li class="animal-main-title">
        <%= animal.name %>
      </li>
    </ul>

  <% end %>
</section>
