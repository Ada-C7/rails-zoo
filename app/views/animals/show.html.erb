<section id = "show_section">
  <h1>
    Meet <%= @animal.name%>!
  </h1>
  <p>
    <%= @animal.name%> is <%= @animal.age%> years old and is an <%= @animal.species%>
  </p>
  <%= link_to image_tag("left1.png", alt: "Edit buttom", height: "30px", class: "button"), animals_path%>
  <%= link_to image_tag("edit1.png", alt: "Edit buttom", height: "30px", class: "button"), edit_animal_path%>
  <%= link_to image_tag("delete_blue1.png", alt: "Edit buttom", height: "30px", class: "button"), animal_path,
  data: {method: :delete, confirm: "Are you sure you want to delete #{@animal.name}"}%>
</section>
