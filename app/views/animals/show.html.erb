<h1>Animal Details</h1>
<ul>
  <%= image_tag("zoopic.jpg", alt: "default zoo photo",border: 0, size: "200x150") %>
  <li>Name: <%= @result_animal.name %></li>
  <li>Species: <%= @result_animal.species %></li>
  <li>Age: <%= @result_animal.age %></li>
</ul>

<h2><%= link_to "Home", animals_path %></h2>
<h2><%= link_to "Edit", edit_animal_path(@result_animal.id)%></h2>
<h2><%= link_to "Delete", delete_animal_path(@result_animal.id), data: { confirm: "Are you sure you want to delete this animal?" }, method: :delete %></h2>
