<%= image_tag "#{@animal.img}", alt: "#{@animal.species}" %>

<ul>
  <li>
    Name: <%= @animal.name %>
  </li>
  <li>
    Species: <%= @animal.species %>
  </li>
  <li>
    Age: <%= @animal.age %>
  </li>
  <li>
    Current mood: <%= @animal.mood %>
  </li>
</ul>

<h4>
    <%= link_to "Edit Animal", edit_animal_path %>
</h4>

<h4>
    <%= link_to "Delete Animal", delete_animal_path, data: { confirm: "Are you sure you want to delete this precious creature?" }, method: :delete %>
</h4>
