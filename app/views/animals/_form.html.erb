<section>
  <%= form_for @animal do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :species %>
  <%= f.text_field :species %>

  <%= f.label :age %>
  <%= f.text_field :age %>

  <%= f.label :weight %>
  <%= f.text_field :weight %>

  <%= f.submit value: "#{submit_text} Animal" %>

  <% end %>

  <%= link_to "back to animal list", animals_path %>
</section>
