<section id = "_form_section">
  <%= form_for @animal do |f| %>
    <div>
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "field"%>
    </div>
    <div>
      <%= f.label :species, class: "label"%>
      <%= f.text_field :species, class: "field"%>
    </div>
    <div>
      <%= f.label :age, class: "label"%>
      <%= f.number_field :age, class: "field"%>
    </div>
    <div>
      <%= f.label :image, class: "label"%>
      <%= f.number_field :image, class: "field"%>
    </div>
    <div id = "_form_section_submit">
      <%= f.submit%>
    </div>
  <% end %>
</section>
