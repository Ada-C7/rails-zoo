<section>
  <%= form_for @animal do |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :species %>
      <%= f.text_field :species %>
    </p>
    <p>
      <%= f.label :age %>
      <%= f.text_field :age %>
    </p>
    <p>
      <%= f.label "Favorite Food" %>
      <%= f.text_field :food %>
    </p>
    <p>
      <%= f.label "Favorite Toy" %>
      <%= f.text_field :toy %>
    </p>
    <p>
      <%= f.submit value: "#{submit_text}" %>
    </p>
    <% end %>
</section>
