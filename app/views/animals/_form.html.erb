<%= form_for @animal do |animal| %>
  <%= animal.label :name %>
  <%= animal.text_field :name %>

  <%= animal.label :species %>
  <%= animal.text_field :species %>

  <%= animal.label :age %>
  <%= animal.text_field :age %>

  <%= animal.label :img_link %>
  <%= animal.text_field :img_link %>

  <%= animal.submit value: "#{action_name} Animal" %>
<% end %>
