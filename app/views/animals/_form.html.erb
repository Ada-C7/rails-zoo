<h1>Add an animal to the zoo</h2>
<section>
  <%= form_for @animal do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :species %>
    <%= f.text_field :species %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.submit value: "Create #{submit_text} Animal" %>
  <% end %>
</section>
