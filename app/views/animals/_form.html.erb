<section>
  <%= form_for @animal do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :species %>
    <%= f.text_field :species %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.label :gender %>
    <%= f.text_field :gender %>

    <%= f.label :details %>
    <%= f.text_field :details %>

    <%= f.submit value: "#{submit_text}" %>
  <% end %>
</section>
