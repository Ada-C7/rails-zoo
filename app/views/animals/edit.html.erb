<h1>Edit <%= @animal.name %></h1>

<article class="form">

<%= form_for @animal, method: :put do |f| %>

<%= f.label :name %>
<%= f.text_field :name %> <br /><br />

<%= f.label :species %>
<%= f.text_field :species %> <br /><br />

<%= f.label :age %>
<%= f.text_field :age %> <br /><br />

<%= f.label :image, "Image URL" %>
<%= f.text_field :image %> <br /><br />

<%= f.submit "Save" %>

<% end %>

</article>
