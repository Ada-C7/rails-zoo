<section class="container">

  <h1>Add a new animal</h1>

  <%= form_for @animal do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <!-- <br/> -->
    <%= f.label :species %>
    <%= f.text_field :species %>

    <%= f.label :sci_name %>
    <%= f.text_field :sci_name %>

    <%= f.label :age %>
    <%= f.text_field :age %>

    <%= f.label :image %>
    <%= f.text_field :image %>

    <label></label>
    <section class="submit">
      <%= f.submit class: "button" %>
    </section>

  <% end %>

  <div class="spacer">

  </div>
</section>
<div class="navlink">
  <%= link_to "[return to all the animals]", animals_path %>
</div>
</nav>
