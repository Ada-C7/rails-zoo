<form action="/animals" method="post" accept-charset="utf-8">
  <!-- SPECIAL INPUT TO ALLOW RAILS TO USE THIS FORM -->
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">

  <label for="name">Name</label>
  <input type="text" name="animal[name]" value="" id="name">

  <label for="species">Species</label>
  <input type="text" name="animal[species]" value="" id="species">

  <label for="age">Age</label>
  <input type="number" name="animal[age]" value="" id="age">

  <input type="submit" value="Submit">
</form>
